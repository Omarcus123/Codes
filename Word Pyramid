#include <iostream>
using namespace std;

int main(int argc, const char * argv[]) {
    
    string pyramid;
    
    cout << "Enter the characters to using for the pyramid: ";
    cin >> pyramid; // 12345
    
    for (int i = 0; i < pyramid.size(); i++) { //i = 0
        for (int j = 0; j < i; j++) { // j = 0
            cout << pyramid[i];
        };
    };
    
    return 0;
}

//    1
//   121
//  12321
// 1234321
//123454321
